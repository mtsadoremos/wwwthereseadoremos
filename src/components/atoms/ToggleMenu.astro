---
import { Icon } from 'astro-icon';

const {
	label = 'Toggle Menu',
	class:
		className = 'ml-1.5 text-[#3f3f3f] hover:bg-[#ffece8] focus:outline-none focus:ring-4 focus:ring-gray-200 rounded-full text-sm p-2.5 inline-flex items-center transition',
	iconClass = 'w-6 h-6',
	iconName = 'tabler:menu',
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-menu>
	<Icon name={iconName} class={iconClass} optimize={false} />
</button>
